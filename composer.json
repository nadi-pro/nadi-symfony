{
    "name": "nadi-pro/nadi-symfony",
    "description": "Nadi monitoring SDK for Symfony applications",
    "license": "MIT",
    "type": "symfony-bundle",
    "require": {
        "php": "^8.1",
        "nadi-pro/nadi-php": "^2.0",
        "symfony/config": "^6.4 || ^7.0",
        "symfony/console": "^6.4 || ^7.0",
        "symfony/dependency-injection": "^6.4 || ^7.0",
        "symfony/event-dispatcher": "^6.4 || ^7.0",
        "symfony/framework-bundle": "^6.4 || ^7.0",
        "symfony/http-kernel": "^6.4 || ^7.0"
    },
    "suggest": {
        "doctrine/dbal": "Required for database query monitoring (^3.0 || ^4.0)"
    },
    "require-dev": {
        "doctrine/dbal": "^3.0 || ^4.0",
        "laravel/pint": "^1.15",
        "mockery/mockery": "^1.5",
        "phpunit/phpunit": "^10.0 || ^11.0",
        "symfony/test-pack": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Nadi\\Symfony\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Nadi\\Symfony\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "@php vendor/bin/phpunit",
        "format": "@php vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true,
            "tbachert/spi": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
